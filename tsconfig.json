{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "esnext",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts*",
        "**/*.spec.ts*"
    ],
    "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "errorsAsWarnings": true
  }
}